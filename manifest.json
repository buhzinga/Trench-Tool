{
  "manifest_version": 3,
  "name": "Memescope Trench Tool",
  "version": "1.0",
  "description": "Efficiently scan for copycats on Photon Memescope",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tinyastro.io/*",
        "*://photon-sol.tinyastro.io/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}